{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSaveMode": "file",
  "editor.codeActionsOnSave": {
    "source.fixAll": true // 保存后自动修复格式
  },
  "git.branchProtection": ["cloud"],
  "eslint.enable": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.validate": ["javascript", "typescript", "vue"],
  "eslint.packageManager": "pnpm",
  // 扩展设置
  "volar.autoCompleteRefs": true,
  "alias-skip.rootpath": "package.json",
  "alias-skip.mappings": {
    "@": "/src", // 默认只有`@`映射，映射到`/src`，你可以添加更多映射，映射路径必须以`/`开头
    // ...更多映射关系
    "@/svg": "/src/assets/svg"
  },
  "i18n-ally.localesPaths": ["src/plugins/i18n/lang"],
  "i18n-ally.pathMatcher": "{locale}.yaml",
  "i18n-ally.dirStructure": "auto",
  "i18n-ally.enabledParsers": ["yaml"],
  "i18n-ally.enabledFrameworks": ["vue-sfc", "vue", "vscode", "custom"],
  "i18n-ally.translate.engines": ["google", "deepl"],
  "i18n-ally.translate.deepl.useFreeApiEntry": true,
  "i18n-ally.translate.fallbackToKey": true,
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.displayLanguage": "zh",
  "i18n-ally.theme.annotationMissing": "rgba(153, 153, 153, .3)",
  "i18n-ally.theme.annotation": "rgba(255, 255, 255, .8)",
  "i18n-ally.theme.annotationBorder": "none",
  "i18n-ally.keystyle": "nested",
  "typescript.tsdk": "node_modules/typescript/lib"
  // 使用项目当前的ts版本, 开发统一
}
